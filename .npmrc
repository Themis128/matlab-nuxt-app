# NPM Configuration for Replit
# Optimized to reduce disk usage and prevent quota exceeded errors

# Use /tmp for cache to avoid filling up workspace
cache=/tmp/npm-cache

# Prefer offline mode when possible to avoid redundant downloads
prefer-offline=true

# Don't save package-lock.json automatically (reduces disk writes)
package-lock=false

# Disable funding messages and security audits (reduces output and processing)
fund=false
audit=false

# Optimize for faster, smaller installations
prefer-dedupe=true
legacy-peer-deps=true

# Reduce logging to save disk space
loglevel=error

# Don't update notifier (reduces disk writes)
update-notifier=false
