{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/master/extensions/json-language-features/server/schema/launch.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nuxt Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      }
    },
    {
      "name": "Run Python API",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/python_api/api.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/python_api"
    }
  ],
  "compounds": [
    {
      "name": "Dev: Nuxt + Python",
      "configurations": ["Run Python API", "Debug Nuxt Server"]
    }
  ]
}
