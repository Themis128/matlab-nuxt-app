<script setup lang="ts">
import { ref, computed } from 'vue'
import { UButton, UCard, UBadge, UIcon, UTextarea } from '#components'

const categories = [
  { id: 'regression', name: 'Regression', icon: 'i-heroicons-chart-bar', color: '#6366f1' },
  { id: 'classification', name: 'Classification', icon: 'i-heroicons-chart-pie', color: '#a78bfa' },
  { id: 'hybrid', name: 'Hybrid', icon: 'i-heroicons-cube-transparent', color: '#8b5cf6' },
]

const selectedCategory = ref(categories[0].id)

const models = [
  {
    id: 1,
    name: 'Mobile Price Regression',
    category: 'regression',
    icon: 'i-heroicons-currency-dollar',
    color: '#6366f1',
    description: 'Predicts mobile price using tabular features.',
    accuracy: 97.2,
    inferenceTime: 18,
    previewImage: '/images/models/price-regression.png',
  },
  {
    id: 2,
    name: 'RAM Classifier',
    category: 'classification',
    icon: 'i-heroicons-chip',
    color: '#a78bfa',
    description: 'Classifies RAM segment from features.',
    accuracy: 94.8,
    inferenceTime: 22,
    previewImage: '/images/models/ram-classifier.png',
  },
  // ... more model objects ...
]

const filteredModels = computed(() =>
  models.filter(model => model.category === selectedCategory.value)
)

const selectedModel = ref(null)
function selectModel(model) {
  selectedModel.value = model
  demoInput.value = ''
  demoResult.value = null
}

const demoInput = ref('')
const demoResult = ref(null)
const isRunning = ref(false)

async function runDemo() {
  if (!selectedModel.value || !demoInput.value) return
  isRunning.value = true
  // Simulate API call
  await new Promise(resolve => setTimeout(resolve, 1200))
  demoResult.value = {
    prediction: '299',
    confidence: 98.5,
    processingTime: 1200,
    probabilities: [
      { class: 'Low', probability: 0.12 },
      { class: 'Medium', probability: 0.33 },
      { class: 'High', probability: 0.55 },
    ],
  }
  isRunning.value = false
}
</script>
