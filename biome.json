{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["**/*"],
    "ignore": [
      "node_modules/**",
      ".nuxt/**",
      ".output/**",
      "dist/**",
      ".git/**",
      "venv/**",
      "**/*.min.js",
      "**/*.min.css"
    ]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
