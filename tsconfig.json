{
  // Note: do not extend .nuxt/tsconfig.json to avoid inheriting wide includes that scan parent projects
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#imports": ["./.nuxt/imports.d.ts"],
      "#components": ["./.nuxt/components.d.ts"],
      "#app": ["./.nuxt/nuxt.d.ts"],
      "#app/*": ["./.nuxt/nuxt.d.ts"],
      "#ui": ["./node_modules/@nuxt/ui/dist/runtime"],
      "#ui/*": ["./node_modules/@nuxt/ui/dist/runtime/*"],
      "#ui-colors": ["./.nuxt/ui.colors.d.ts"],
      "#build": ["."],
      "#build/*": ["./*"],
      "#composables": ["./composables"],
      "#composables/*": ["./composables/*"],
      "#stores": ["./stores"],
      "#stores/*": ["./stores/*"],
      "#plugins": ["./plugins"],
      "#plugins/*": ["./plugins/*"],
      "#layouts": ["./layouts"],
      "#layouts/*": ["./layouts/*"],
      "#pages": ["./pages"],
      "#pages/*": ["./pages/*"],
      "#server": ["./server"],
      "#server/*": ["./server/*"]
    },

    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    ".nuxt/nuxt.node.d.ts",
    "./server/**/*",
    "./pages/**/*",
    "./components/**/*",
    "./composables/**/*",
    "./stores/**/*",
    "./plugins/**/*",
    "./layouts/**/*",
    "./types/**/*",
    "./nuxt.config.*",
    "./app.vue",
    "./scripts/**/*",
    "./assets/**/*",
    "**/*.{ts,tsx,vue,js,jsx}"
  ],
  "files": ["nuxt.config.ts"],

  "exclude": [
    "../**/*",
    "../node_modules",
    "../node_modules/nuxt/node_modules",
    "../node_modules/@nuxt/icon/node_modules",
    "../node_modules/@nuxtjs/color-mode/node_modules",
    "../node_modules/@nuxtjs/tailwindcss/node_modules",
    "../node_modules/@nuxt/ui/node_modules",
    "../node_modules/@pinia/nuxt/node_modules",
    "../node_modules/@sentry/nuxt/node_modules",
    "../node_modules/@nuxt/devtools/node_modules",
    "../node_modules/@nuxt/telemetry/node_modules",
    "../dist",
    "../.data",
    "../llm-dev-agent/**/*",
    "../supabase-master/**/*",
    "../s3-website-fresh/**/*",
    "../modules/*/runtime/server/**/*",
    "../layers/*/server/**/*",
    "../layers/*/modules/*/runtime/server/**/*",
    "../node_modules/runtime/server",
    "../node_modules/dist/runtime/server",
    "venv",
    "**/venv/*",
    // Exclude large source and data folders that are not actively edited to speed up the TS/JS language service
    "../data",
    "../matlab",
    "../mobiles-dataset-docs",
    "../python_api",
    "../public",
    "../screenshots",
    "../test-results",
    "../tests",
    "../docs",
    "../deployment",
    "../examples",
    "../instantsearch-app",
    "../playwright-report",
    "../wiki",
    // Also include workspace-relative global suppression patterns
    "**/matlab/**",
    "**/python_api/**",
    "**/data/**",
    "**/mobiles-dataset-docs/**",
    "**/screenshots/**",
    "**/test-results/**",
    "**/tests/**",
    "**/docs/**",
    "**/deployment/**",
    "**/examples/**",
    "**/wiki/**",
    "**/public/**",
    "**/venv/**",
    "**/.venv/**",
    "**/__pycache__/**",
    "**/python_api/**",
    "**/instantsearch-app/**"
  ]
}
