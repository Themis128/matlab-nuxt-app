{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "@nuxt/types",
            "@types/node"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ],
            "~~/*": [
                "./*"
            ],
            "@@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist",
        ".output"
    ]
}