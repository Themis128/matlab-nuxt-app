{
  // Note: do not extend .nuxt/tsconfig.json to avoid inheriting wide includes that scan parent projects
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@@/*": ["../*"],
      "#shared": ["../shared"],
      "#shared/*": ["../shared/*"],
      "#app": ["../node_modules/nuxt/dist/app"],
      "#app/*": ["../node_modules/nuxt/dist/app/*"],
      "vue-demi": ["../node_modules/nuxt/dist/app/compat/vue-demi"],
      "#ui": ["../node_modules/@nuxt/ui/dist/runtime"],
      "#ui/*": ["../node_modules/@nuxt/ui/dist/runtime/*"],
      "#ui-colors": ["./ui.colors"],
      "#color-mode-options": ["./color-mode-options.mjs"],
      "#vue-router": ["../node_modules/vue-router"],
      "#unhead/composables": ["../node_modules/nuxt/dist/head/runtime/composables"],
      "#imports": ["./imports"],
      "#tailwind-config": ["./tailwind/expose"],
      "#tailwind-config/*": ["./tailwind/expose/*"],
      "#app-manifest": ["./manifest/meta/7d8b0bbe-c49a-4bb3-b9bf-892571ef41c1.json"],
      "#components": ["./components"],
      "#build": ["."],
      "#build/*": ["./*"]
    },

    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": [
    "nuxt.d.ts",
    "nuxt.node.d.ts",
    "server/**/*",
    "pages/**/*",
    "components/**/*",
    "composables/**/*",
    "stores/**/*",
    "plugins/**/*",
    "layouts/**/*",
    "types/**/*",
    "nuxt.config.*",
    "app.vue",
    "scripts/**/*",
    "assets/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../node_modules/nuxt/node_modules",
    "../node_modules/@nuxt/icon/node_modules",
    "../node_modules/@nuxtjs/color-mode/node_modules",
    "../node_modules/@nuxtjs/tailwindcss/node_modules",
    "../node_modules/@nuxt/ui/node_modules",
    "../node_modules/@pinia/nuxt/node_modules",
    "../node_modules/@sentry/nuxt/node_modules",
    "../node_modules/@nuxt/devtools/node_modules",
    "../node_modules/@nuxt/telemetry/node_modules",
    "../dist",
    "../.data",
    "../llm-dev-agent/**/*",
    "../supabase-master/**/*",
    "../s3-website-fresh/**/*",
    "../modules/*/runtime/server/**/*",
    "../layers/*/server/**/*",
    "../layers/*/modules/*/runtime/server/**/*",
    "../node_modules/runtime/server",
    "../node_modules/dist/runtime/server",
    "venv",
    "**/venv/*",
    // Exclude large source and data folders that are not actively edited to speed up the TS/JS language service
    "../data",
    "../matlab",
    "../mobiles-dataset-docs",
    "../python_api",
    "../public",
    "../screenshots",
    "../test-results",
    "../tests",
    "../docs",
    "../deployment",
    "../examples",
    "../instantsearch-app",
    "../playwright-report",
    "../wiki",
    // Also include workspace-relative global suppression patterns
    "**/matlab/**",
    "**/python_api/**",
    "**/data/**",
    "**/mobiles-dataset-docs/**",
    "**/screenshots/**",
    "**/test-results/**",
    "**/tests/**",
    "**/docs/**",
    "**/deployment/**",
    "**/examples/**",
    "**/wiki/**",
    "**/public/**",
    "**/venv/**",
    "**/.venv/**",
    "**/__pycache__/**",
    "**/python_api/**",
    "**/instantsearch-app/**"
  ]
}
