SENTRY_ACCESS_TOKEN=$SENTRY_AUTH_TOKEN

# Sentry Host Configuration
# Use Sentry SaaS by default, override for self-hosted
SENTRY_HOST=
SENTRY_DSN=https://8a69bd6fe87e03fbdbc5a69103bb14d3@o4509865552445520

# Environment Configuration
# Set to 'development' to match your .env file
NODE_ENV=development
SENTRY_ENVIRONMENT=development

# Organization and Project Configuration
# Updated to match your existing .env configuration
SENTRY_ORG_SLUG=baltzakisthemiscom
SENTRY_PROJECT_SLUG=matlab

