{
  "manifest_version": 3,
  "name": "Matlab Nuxt App Helper",
  "version": "0.1.0",
  "description": "A lightweight Chrome extension that interacts with the Matlab Nuxt App for quick actions and debug helpers.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Matlab Nuxt"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:3000/*", "http://localhost:8000/*", "https://*/*"],
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
