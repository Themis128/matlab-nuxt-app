[Unit]
Description=MATLAB Mobile Dataset Python API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/matlab-mobile-dataset/python_api
Environment="PATH=/var/www/matlab-mobile-dataset/venv/bin"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/var/www/matlab-mobile-dataset/venv/bin/uvicorn api:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/www/matlab-mobile-dataset/python_api/trained_models
ReadOnlyPaths=/var/www/matlab-mobile-dataset/data

[Install]
WantedBy=multi-user.target
