# Auto detect text files and perform LF normalization
* text=auto
# MATLAB files
*.m text eol=lf
*.mat filter=lfs diff=lfs merge=lfs -text
# Python files
*.py text eol=lf
*.pyc binary
# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
# Documentation
*.md text eol=lf
*.txt text eol=lf
# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.config.* text eol=lf
# Binary files
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif binary
*.ico binary
*.pdf binary
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz binary
# Data files
*.csv text eol=lf
*.h5 binary
*.hdf5 binary
*.webp filter=lfs diff=lfs merge=lfs -text
