# Sentry MCP Server Configuration
# Copy this file to .env.sentry and fill in your actual credentials
# NEVER commit .env.sentry to version control!

SENTRY_DSN=https://YOUR_PUBLIC_KEY@oYOUR_ORG_ID.ingest.de.sentry.io/YOUR_PROJECT_ID
SENTRY_ACCESS_TOKEN=your_sentry_access_token_here
SENTRY_ORG_SLUG=your-org-slug
SENTRY_PROJECT_SLUG=your-project-slug
SENTRY_PROJECT_ID=your_project_id_here
SENTRY_PUBLIC_KEY=your_public_key_here
SENTRY_SECRET_KEY=your_secret_key_here
SENTRY_ENVIRONMENT=development
SENTRY_MCP_SKILLS=inspect,triage
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# OTLP (OpenTelemetry) Configuration
OTLP_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/integration/otlp
OTLP_LOGS_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/integration/otlp/v1/logs
OTLP_TRACES_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/integration/otlp/v1/traces
SENTRY_AUTH_HEADER=sentry sentry_key=YOUR_PUBLIC_KEY

# JavaScript Loader Script
SENTRY_LOADER_SCRIPT=https://js-de.sentry-cdn.com/YOUR_PUBLIC_KEY.min.js

# Security Header Endpoint
SENTRY_SECURITY_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/security/?sentry_key=YOUR_PUBLIC_KEY

# Minidump Endpoint
SENTRY_MINIDUMP_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/minidump/?sentry_key=YOUR_PUBLIC_KEY

# Vercel Integration Endpoints
VERCEL_LOG_DRAIN_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/integration/vercel/logs
VERCEL_TRACE_DRAIN_ENDPOINT=https://oYOUR_ORG_ID.ingest.de.sentry.io/api/YOUR_PROJECT_ID/integration/otlp/v1/traces
