# EditorConfig helps maintain consistent coding styles
# https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

[*.md]
# Keep trailing spaces in markdown (for line breaks)
trim_trailing_whitespace = false
max_line_length = off

[*.{ts,js,tsx,jsx,vue}]
indent_size = 2
insert_final_newline = true

[*.{json,jsonc,yml,yaml}]
indent_size = 2

[*.m]
# MATLAB scripts: 4 spaces for readability in nested blocks
indent_size = 4

[*.py]
indent_size = 4

[*.bat]
end_of_line = crlf

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf
